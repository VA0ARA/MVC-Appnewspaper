@model News.Models.Incident
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class=" col-12 text-center">
                <h2 class="text-white py-2">حذف خبر</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*        <div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2  col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2  col-12">
                    <input asp-for="Overview" class="form-control border-0 shadow" />
                    <label asp-for="Overview" class="ms-2"></label>
                    <span asp-validation-for="Overview" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-3">
                        <button type="submit" class="btn btn-danger form-control">حذف</button>
                    </div>
                    <div class="col-6 col-3">
                        <a asp-controller="Incident" asp-action="Index" class="btn btn-secondary border form-control">بازگشت به لیست</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>




