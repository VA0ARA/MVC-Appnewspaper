 @model News.Models.Incident
<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="ImageUrl" hidden />
    <input asp-for="Title" hidden />
    <input asp-for="Description" hidden />
    <input asp-for="Overview" hidden />
    <input asp-for="CategoryId" hidden />
    <input asp-for="JournalistId" hidden />
<div class="form-check">
        <input class="form-check-input" type="radio" asp-for="PermitToPublish" value="true" >
    <label class="form-check-label" for="flexRadioDefault1">
        انتشار خبر
    </label>
</div>
<div class="form-check">
        <input class="form-check-input" type="radio" asp-for="PermitToPublish" value="false">
    <label class="form-check-label" for="flexRadioDefault2">
        عدم انتشار خبر
    </label>
</div>
    <div class="col-6 col-3">
        <button type="submit" class="btn btn-primary form-control">ثبت انتشار</button>
    </div>
</form>
<a asp-controller="Admin" asp-action="AdminProfile" class="btn btn-danger mx-2">
    <i class="bi bi-trash3"></i>بازگشت
</a>


