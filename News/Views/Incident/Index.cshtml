@model List<News.Models.Incident>
@*<partial name="_Notification" />*@
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class=" col-12 text-center">
                <h2 class="text-white py-2"> لیست خبرها</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Incident" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-bag-plus"></i> ساخت  خبری جدید
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        عنوان خبر
                    </th>
                    <th>
                        سر خط خبر
                    </th>
                    <th>
                        مشروح خبر
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item.Title
                        </th>
                        <th>
                            @item.Overview
                        </th>
                        <th>
                            @item.Description
                        </th>
                        <th>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Incident" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>ویرایش
                                </a>
                                <a asp-controller="Incident" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>حذف
                                </a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



