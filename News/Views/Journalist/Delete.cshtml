@model News.Models.Journalist
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class=" col-12 text-center">
                <h2 class="text-white py-2">مشخصات فردی</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2  col-12">
                    <input asp-for="FirstName" class="form-control border-0 shadow" />
                    <label asp-for="FirstName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2  col-12">
                    <input asp-for="LastName" class="form-control border-0 shadow" />
                    <label asp-for="LastName" class="ms-2"></label>
                </div>
                <div class="form-floating py-2  col-12">
                    <input asp-for="InsuranceNumber" class="form-control border-0 shadow" />
                    <label asp-for="InsuranceNumber" class="ms-2"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-3">
                        <button type="submit" class="btn btn-danger form-control">حذف</button>
                    </div>
                    <div class="col-6 col-3">
                        <a asp-controller="Home" asp-action="ModelDetail" class="btn btn-secondary border form-control">بازگشت</a>
                    </div>
                </div>
        </form>
    </div>
</div>
